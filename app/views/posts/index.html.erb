
<%= link_to new_post_path do %>
  New post
<% end %>
<br>
<br>


<% @posts.each do |post| %>
<div id="post_<%=post.id%>">
  <p><%= post.message %></p>
  <div> <%= post.user.email %></div>
  <%= link_to 'Edit', edit_post_path(post) %>
  <%= link_to 'Delete', post_path(post), :method => :delete,
                                          data: { confirm: "Are you sure?" } %>
</div>
<% end %>
