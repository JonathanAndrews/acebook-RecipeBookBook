<% @posts.each do |post| %>
  <p><%= post.message %></p>
    <% post.comments.each do |comment| %>
  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>
<% end %>
  <%= link_to 'Add comment', post_path(post) %>
  <%= link_to 'Edit', edit_post_path(post) %>
<% end %>
<br>

<%= link_to new_post_path do %>
  New post
<% end %>
